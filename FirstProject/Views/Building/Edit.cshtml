@model FirstProject.ViewModels.EditBuildingViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Name</td>
            <td>@Html.EditorFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>@Html.EditorFor(model => model.Address)</td>
        </tr>
        <tr>
            <td>NumberOfFlats</td>
            <td>@Html.EditorFor(model => model.NumberOfFlats)</td>
        </tr>
        <tr>
        <tr>
            <td>Flats</td>
            <td>@Html.EditorFor(model => model.Flats)</td>
        </tr>
        <tr>
            <input type="submit" value="Submit" />
        </tr>

    </table>


}

