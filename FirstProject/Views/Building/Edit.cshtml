@model FirstProject.ViewModels.EditBuildingViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<p>
    @Html.ActionLink("Edit Flat", "EditFlat", new { id = Model.FlatId })
</p>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Name</td>
            <td>@Html.EditorFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>@Html.EditorFor(model => model.Address)</td>
        </tr>
        <tr>
            <td>NumberOfFlats</td>
            <td>@Html.EditorFor(model => model.NumberOfFlats)</td>
        </tr>
        
        <tr>
            <th colspan="3">
                <table class="table">
                    <tr>
                        <th>Floor</th>
                        <th>Number</th>
                        <th>Furnished</th>
                        <th>Parking</th>
                        <th>PetAllowed</th>
                        <th>BillsIncluded</th>
                        <th>Bedroom</th>
                    </tr>
                    @foreach (var item in Model.Flats)
                    {
                        <tr>

                            <td colspan="3">@Html.DisplayFor(modelItem => item.Floor)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number)</td>
                            <td>@Html.CheckBoxFor(modelItem => item.Furnished.Value)</td>
                            <td>@Html.CheckBoxFor(modelItem => item.Parking.Value)</td>
                            <td>@Html.DisplayFor(modelItem => item.PetAllowed)</td>
                            <td>@Html.DisplayFor(modelItem => item.BillsIncluded)</td>
                            <td>@Html.DisplayFor(modelItem => item.Bedroom)</td>

                        </tr>

                    }

                </table>
            </th>
        </tr>


        <tr>
            <input type="submit" value="Submit" />
        </tr>

    </table>


}

